{
  "name": "Injecta",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Inject Scripts and Styles",
  "homepage_url": "https://github.com/bsehovac/injecta",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Inject!"
  },
  "permissions": [
    "file:///*",
    "https://*/*",
    "http://*/*",
    "tabs"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    "inject/*"
  ]
}
